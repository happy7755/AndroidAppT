<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#8bbcbc">

    <LinearLayout
        android:id="@+id/parent_center"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" >
    </LinearLayout>

    <ImageButton android:id="@+id/button1"
        android:src="@drawable/selector"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="1"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignBaseline="@+id/parent_center"
        android:layout_alignLeft="@+id/parent_center"
        android:layout_alignBottom="@+id/parent_center"/>

    <ImageButton
        android:id="@+id/button2"
        android:src="@drawable/selector"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:text="2"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="40dp"
        android:layout_alignBaseline="@+id/parent_center"
        android:layout_alignLeft="@+id/parent_center"
        android:layout_alignTop="@+id/parent_center"/>

    <ImageButton android:id="@+id/button3"
        android:src="@drawable/selector"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="3"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignBaseline="@+id/parent_center"
        android:layout_alignRight="@+id/parent_center"
        android:layout_alignBottom="@+id/parent_center"/>

    <ImageButton
        android:id="@+id/button4"
        android:src="@drawable/selector"
        android:scaleType="fitCenter"
        android:padding="0dp"
        android:background="@null"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="4"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignBaseline="@+id/parent_center"
        android:layout_alignRight="@+id/parent_center"
        android:layout_alignTop="@+id/parent_center"/>

</RelativeLayout>